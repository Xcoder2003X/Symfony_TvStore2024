    <script>
        

        // changer la couleur des palletes
        // Fonction pour changer la couleur de fond 
        function changeBackgroundColor(proprtyValue) { 
          document.body.style.background = proprtyValue; } 
          // Sélectionner les divs de couleur 
          const colorDivs = document.querySelectorAll('.pallete-options div'); 
          //Ajouter des événements de clic à chaque div 
          //getComputedStyle(div) renvoie l'objet CSSStyleDeclaration contenant toutes 
          colorDivs.forEach(div => { 
            div.addEventListener('mouseover', () => { 
              const background = getComputedStyle(div).background;
              console.log(background);            
              changeBackgroundColor(background); 

            
          }); 
        });
        
      
    </script>
